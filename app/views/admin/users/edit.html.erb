<% provide(:title, "Gebruiker aanpassen") %>

<h1><%= yield(:title) %></h1>

<%= horizontal_form [:admin, @user] do |f| %>
  <%= render 'fields', f: f %>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit, 'Bijwerken' %>
      <%= link_to 'Annuleren', admin_users_path, class: "btn-u btn-u-default" %>
    </div>
  </div>
<% end %>
