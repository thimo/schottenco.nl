<% provide(:title, "#{@user.name}") %>

<div class="action_bar_right">
  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_user_path(@user), class: "btn-u btn-u-default", title: "Aanpassen" %>
</div>

<h1>
  <%= yield(:title) %>
</h1>

<div class="row form-horizontal">
  <label class="col-sm-3 control-label">Naam</label>
  <p class="col-sm-9 form-control-static">
    <%= @user.name %>
  </p>

  <label class="col-sm-3 control-label">E-mail</label>
  <p class="col-sm-9 form-control-static">
    <%= @user.email %>
  </p>

  <label class="col-sm-3 control-label">Geboortedatum</label>
  <div class="col-sm-9 form-control-static">
    <%= @user.birthdate %>
  </div>
</div>
