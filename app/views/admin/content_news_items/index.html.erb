<% provide(:title, "Nieuwsberichten") %>

<div class="action_bar_right mt-10">
  <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_admin_content_news_item_path, class: "btn-u btn-u-default", title: "Nieuwsbericht toevoegen" %>
</div>

<h1><%= yield(:title) %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Titel</th>
      <th>Introductie</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @content_news_items %>
  </tbody>
</table>
