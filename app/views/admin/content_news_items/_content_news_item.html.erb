<tr>
  <td>
    <%= link_to content_news_item.published_at.localtime, edit_admin_content_news_item_path(content_news_item) %>
  </td>
  <td>
    <%= content_news_item.title %>
  </td>
  <td>
    <%= markdown(content_news_item.intro).html_safe %>
  </td>
  <td>
    <%= markdown(content_news_item.body).html_safe %>
