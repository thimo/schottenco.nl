<% provide(:title, "Plaatje #{@content_image.name}") %>

<div class="action_bar_right mt-10">
  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_content_image_path(@content_image), class: "btn-u btn-u-default", title: "Aanpassen" %>
</div>

<h1>
  <%= yield(:title) %>
</h1>

<div class="row form-horizontal">
  <label class="col-sm-3 control-label">Naam</label>
  <p class="col-sm-9 form-control-static">
    <%= @content_image.name %>
  </p>

  <div class="col-sm-9 col-sm-offset-3">
    <%= link_to @content_image.image_url(:large).to_s do %>
      <%= image_tag @content_image.image_url(:thumb200).to_s %>
    <% end %>
  </div>

  <label class="col-sm-3 control-label">URL</label>
  <p class="col-sm-9 form-control-static">
    <%= @content_image.image_url(:large).to_s %>
  </p>

  <label class="col-sm-3 control-label">Markdown</label>
  <p class="col-sm-9 form-control-static">
    !["<%= @content_image.name %>"](<%= @content_image.image_url(:large).to_s %>)
  </p>

</div>
