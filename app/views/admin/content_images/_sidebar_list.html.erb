<div class="posts margin-bottom-40 footer-v2">
  <div class="headline headline-md">
    <% unless current_page?(action: 'edit') %>
    <div class="action_bar_right mt-10">
      <%= link_to new_admin_content_image_path(imageable_id: imageable.id, imageable_type: imageable.class.name), class: "btn-u btn-u-default" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <% end %>

    <h2>Plaatjes</h2>
  </div>

  <ul class="list-unstyled blog-latest-posts">
    <% imageable.content_images.each do |content_image| %>
      <li>
        <%= link_to content_image.image_url(:large).to_s, target: "_blank" do %>
          <h3><%= content_image.name %></h3>
          <%= image_tag content_image.image_url(:thumb200).to_s %>
        <% end %>
        <div class="ellipsis small"><%= content_image.image_url(:large).to_s %></div>
        <div class="ellipsis small">
          !["<%= content_image.name %>"](<%= content_image.image_url(:large).to_s %>)
        </div>
      </li>
    <% end %>
  </ul>
  <% if imageable.content_images.count == 0 %>
    <p><i>Geen plaatjes gevonden.</i></p>
  <% end %>

  <% if current_page?(action: 'edit') %>
  <p>Plaatjes toevoegen kan op de volgende pagina, klik daarvoor eerst op "Bijwerken".</p>
  <% end %>
</div>
