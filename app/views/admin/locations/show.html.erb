<% provide(:title, "Locatie #{@location.name}") %>

<div class="action_bar_right mt-10">
  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_location_path(@location), class: "btn-u btn-u-default", title: "Aanpassen" %>
</div>

<h1>
  <%= yield(:title) %>
</h1>

<div class="row form-horizontal">
  <label class="col-sm-3 control-label">Locatie</label>
  <div class="col-sm-9 form-control-static">
    <div>
      <%= @location.name %>
    </div>
    <div>
      <%= @location.address %>
    </div>
    <div>
      <%= @location.city %>
    </div>
    <div>
      <%= @location.zip %>
    </div>
    <div>
      <%= @location.phone %>
    </div>
  </div>
</div>
