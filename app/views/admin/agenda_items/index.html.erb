<% provide(:title, "Agenda") %>

<div class="action_bar_right">
  <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_admin_agenda_item_path, class: "btn-u btn-u-default", title: "Agenda item toevoegen" %>
</div>

<h1><%= yield(:title) %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Titel</th>
      <th>Locatie</th>
      <th>Aanmeldingen</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @agenda_items %>
  </tbody>
</table>
