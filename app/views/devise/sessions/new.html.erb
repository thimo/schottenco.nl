<% provide(:title, "Inloggen") %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "E-mailadres", required: false, autofocus: true %>
    <%= f.input :password, label: "Wachtwoord", required: false %>
    <%= f.input :remember_me, as: :boolean, label: "Bewaar mijn login gegevens" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Inloggen" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
