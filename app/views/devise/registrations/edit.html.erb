<% provide(:title, "Bewerk <%= resource_name.to_s.humanize %>") %>"

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "E-mailadres", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Wachten op de bevestiging van: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "laat dit veld leeg als je je wachtwoord niet wilt wijzigen", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we hebben je huidige wachtwoord nodig om de aanpassingen te bevestigen", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Aanpassen" %>
  </div>
<% end %>

<h3>Verwijder mijn account</h3>

<p>Niet blij? <%= link_to "Verwijder mijn account", registration_path(resource_name), data: { confirm: "Weet je het zeker?" }, method: :delete %></p>

<%= link_to "Terug", :back %>
