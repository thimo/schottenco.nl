<% provide(:title, "Aanmelden") %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "E-mailadres", required: true, autofocus: true %>
    <%= f.input :password, label: "Wachtwoord", required: true, hint: ("Minstens #{@minimum_password_length} karakters" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Bevestig wachtwoord", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Aanmelden" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
