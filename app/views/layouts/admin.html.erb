<% content_for :content do %>
<div class="container mb-60">
  <div class="row">
    <div class="col-md-9">
      <%= yield %>
    </div>

    <div class="col-md-3">
      <div class="posts margin-bottom-40 footer-v2">
        <div class="headline headline-md">
          <h2>Admin</h2>
        </div>

        <ul class="list-unstyled link-list">
          <li>
            <%= link_to "Agenda", admin_agenda_items_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Locaties", admin_locations_path %>
            <i class="fa fa-angle-right"></i>
          </li>
        </ul>
      </div>

      <div class="posts margin-bottom-40 footer-v2">
        <div class="headline headline-md">
          <h2>Content</h2>
        </div>

        <ul class="list-unstyled link-list">
          <li>
            <%= link_to "Teksten", admin_content_texts_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Pagina's", admin_content_pages_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Plaatjes", admin_content_images_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Blog artikelen", admin_content_blogs_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Nieuwsberichten", admin_content_news_items_path %>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <%= link_to "Nieuwsbrieven", admin_content_newsletters_path %>
            <i class="fa fa-angle-right"></i>
          </li>
        </ul>
      </div>

      <%= yield(:sidebar) %>
    </div>
  </div>
</div>
<% end %>

<%= render template: "layouts/application" %>
